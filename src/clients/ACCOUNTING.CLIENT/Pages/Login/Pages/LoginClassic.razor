@page "/loginClassic"

@using MudBlazor

<MudContainer Class="mt-16" MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Login</MudText>
    <MudGrid Justify="Justify.Center" Spacing="12" Class="mt-5">
        <MudItem sm="6" xs="12">
            <MudText Typo="Typo.h5" GutterBottom="true">Please fill your Info</MudText>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField T="string" Label="Username" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Person" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField T="string" Label="Password" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonTestClick" AdornmentAriaLabel="Show Password" />
                </MudItem>
                <MudItem xs="12" Class="d-flex justify-center">
                    <MudButton Variant="Variant.Filled" DropShadow="false" Color="Color.Primary" Size="Size.Large" Class="mt-8">Login </MudButton>
                </MudItem>
                <MudItem xs="12" Class="d-flex justify-center">
                    <MudText Typo="Typo.inherit" Align="Align.Center" GutterBottom="true">
                        <MudLink Href="/loginToken" Underline="Underline.Always">Login using token</MudLink> 
                          &nbsp;| &nbsp;
                        <MudLink Href="/register" Underline="Underline.Always">Register</MudLink>
                    </MudText>
                </MudItem>

            </MudGrid>
        </MudItem>
    </MudGrid>
</MudContainer>



